@model BannerHeading

<h1 class="banner__heading heading">
    <span class="heading__line1">@Model.HeadingLine1</span>
    @if (Model.HasSeparator)
    {
        <span class="heading__separator vh">@Model.HeadingSeparator</span>
    }
    @if (Model.HasHeadingLine2)
    {
        <span class="heading__line2">@Model.HeadingLine2</span>
    }
</h1>
